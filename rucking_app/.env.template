# Environment Variables Template for Rucking App
# Copy this file to .env and fill in your actual values

# === SENTRY ERROR MONITORING ===
# Required for comprehensive error tracking and performance monitoring
# Get your DSN from https://sentry.io/settings/projects/
SENTRY_DSN=https://your-dsn-here@sentry.io/your-project-id
SENTRY_ENVIRONMENT=production
# Available environments: development, staging, production

# === SUPABASE BACKEND ===
# Your Supabase project configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# === EXTERNAL SERVICES ===
# Add other service API keys as needed
# OPENAI_API_KEY=your-openai-key
# GOOGLE_MAPS_API_KEY=your-google-maps-key
# STRIPE_PUBLISHABLE_KEY=your-stripe-key

# === FEATURE FLAGS ===
# Enable/disable features for testing
ENABLE_ANALYTICS=true
ENABLE_CRASH_REPORTING=true
ENABLE_PERFORMANCE_MONITORING=true

# === DEVELOPMENT SETTINGS ===
# Development-specific configurations
DEBUG_MODE=false
VERBOSE_LOGGING=false
MOCK_LOCATION_SERVICES=false

# === BACKEND LOGGING ===
# For sending critical errors to your backend logging service
BACKEND_ERROR_ENDPOINT=https://your-backend.com/api/errors
BACKEND_ERROR_API_KEY=your-backend-api-key

# Note: Never commit the actual .env file to version control!
# Add .env to your .gitignore file
